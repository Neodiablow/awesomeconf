alignment bottom_middle
background yes
border_width 0
cpu_avg_samples 2
#default_color e3d800
default_color ff0111
default_outline_color ffffff
draw_borders no
draw_graph_borders yes
draw_outline no
draw_shades no
use_xft yes
xftfont Sans Mono:size=8
gap_x 2
gap_y -13
minimum_size 1360 6
maximum_width 1360
net_avg_samples 2
no_buffers yes
out_to_console no
out_to_stderr no
extra_newline no
own_window no
own_window_class Conky
own_window_type desktop
own_window_transparent yes
stippled_borders 0
update_interval 1.0
double_buffer yes
uppercase no
use_spacer left
show_graph_scale no
show_graph_range no
format_human_readable yes

#color1 d3d3d0
#color2 FFFFFF
#color3 5e8c00
#color0 d3d3d0

color1 0000ff
color2 FFFFFF
color3 5e8c00
color0 ee0111

mpd_host 127.0.0.1

TEXT
${color1} Battery: [${if_match "${acpiacadapter}" == "off-line"}${color}${else}${color3}${endif}${battery_percent BAT0}%${color1}]  ${color2} |   \
${color1}CPU: ${color0}${cpu}% ${color}${cpubar cpu0 5,50}${color1}  ${color2} |   \
${color1}RAM:${color0} ${memperc}% ${color} ${membar 5,50} ${color1} ${color2}  |   \
${color1}Uptime : ${color}$uptime_short  ${color2} |   \
${if_up wlan0}${alignc}${color1}wlan0 [ ${color3}${addrs wlan0} ${color1}]: ${color1}Up:${color} ${upspeed wlan0} ${color1} - Down:${color} ${downspeed wlan0}${else}${alignc}${color1}eth0 [ ${color3}${addrs eth0}${color1}]: ${color1}Up:${color} ${upspeed eth0} ${color1} - Down:${color} ${downspeed eth0}${endif}   \
${alignc}${color2}${if_mpd_playing}|    ${color1}[${mpd_status} - ${mpd_elapsed}/${mpd_length}] ${font Lucida San Unicode:style=Bold:pixelsize=10}${color2}${scroll 75 5 ${mpd_smart}}${else}${endif}

